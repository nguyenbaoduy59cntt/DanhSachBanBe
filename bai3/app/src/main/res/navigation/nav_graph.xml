<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DSMHFragment">
    <fragment
        android:id="@+id/DSMHFragment"
        android:name="vn.edu.ntu.nbd.recycleview.DSMHFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_DSMHFragment_to_DSGHFragment"
            app:destination="@id/DSGHFragment" />
        <action
            android:id="@+id/action_DSMHFragment_to_themMatHangFragment"
            app:destination="@id/themMatHangFragment"
            app:popUpTo="@id/DSMHFragment"/>
    </fragment>
    <fragment
        android:id="@+id/DSGHFragment"
        android:name="vn.edu.ntu.nbd.recycleview.DSGHFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_DSGHFragment_to_muaHangFragment"
            app:destination="@id/muaHangFragment"
            app:popUpTo="@id/DSGHFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/muaHangFragment"
        android:name="vn.edu.ntu.nbd.recycleview.MuaHangFragment"
        android:label="fragment_mua_hang"
        tools:layout="@layout/fragment_mua_hang" >
        <action
            android:id="@+id/action_muaHangFragment_to_DSMHFragment"
            app:destination="@id/DSMHFragment" />
    </fragment>
    <fragment
        android:id="@+id/themMatHangFragment"
        android:name="vn.edu.ntu.nbd.recycleview.ThemMatHangFragment"
        android:label="fragment_them_mat_hang"
        tools:layout="@layout/fragment_them_mat_hang" >
        <action
            android:id="@+id/action_themMatHangFragment_to_DSMHFragment"
            app:destination="@id/DSMHFragment" />
    </fragment>
</navigation>